<Window x:Class="ShootGame.Guide"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="万圣节之夜" Height="500" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Resources/background.png"/>
        </Grid.Background>
        <Button Content="START" FontSize="22" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Width="92" Click="Button1_Click" Height="39" Margin="286,286,0,0" BorderBrush="{x:Null}" Cursor="Hand">
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="Resources/button.png"/>
            </Button.Background>
        </Button>
        <Button Content="EXIT" FontSize="22" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Width="92" Click="Button2_Click" Height="39" Margin="286,343,0,0" BorderBrush="{x:Null}" Cursor="Hand">
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="Resources/button.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
